<%= "You are currently logged in as #{current_user.username}" %><br>
<%= link_to 'Logout', logout_path, method: :delete %>

<section class='feed-box'>
  <% @list_posts.each do |post| %>
    <section class='post-box'>
      <%= image_tag(user_avatar(post.user_id), :class => 'profile-img' ) %>
      <%= User.find(post.user_id).username %>
      Posted <%= time_ago_in_words(post.created_at) %>
      <%= emojify(post.message) %>
      <%= image_tag(post.post_image) if post.post_image.attached? %>
      <%= link_to image_tag('JF-Queen-Heart.png', width: 50), post, method: 'patch' %>
      <div>
        <% if post.likes > 0 %>
          + <%= post.likes %>
        <% elsif post.likes == 0 %>
          <%= post.likes %>
        <% elsif post.likes < 0 %>
          - <%= post.likes %>
        <% end %>
      </div>
      <%= link_to 'Comments', post_path(post)%>
    </section>
  <% end %>
</section>



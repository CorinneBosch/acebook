<% @list_posts.each do |post| %>
  <div class='profile-image'>
    <%= image_tag(user_avatar(post.user_id), :class => 'profile-img' ) %>
    <%= User.find(post.user_id).username %>
  </div>
  <p>Posted <%= time_ago_in_words(post.created_at) %></p>
  <p><%= post.message %></p>
  <%= image_tag(post.post_image, width: 200) if post.post_image.attached? %>
  <br>
  <%= link_to image_tag('likebutton.png', width: 14, height: 14), post_path(post, change: {like: true}), method: 'patch' %>





  <%= link_to image_tag('likebutton.png', width: 14, height: 14), post, method: 'patch' %>
  <p><%= button_tag "Like", type: 'button', id: "#{post.id}"%></p>
  <%= link_to 'Like', post, method: 'patch' %>
  <% if post.likes > 0 %>
    + <%= post.likes %>
  <% elsif post.likes == 0 %>
    <%= post.likes %>
  <% elsif post.likes < 0 %>
   - <%= post.likes %>
  <br>
  <% end %>
  <%= link_to image_tag('dislikebutton.jpeg', width: 14, height: 14), post_path(post, change: {dislike: true}), method: 'patch' %>
  <br>
  <% if current_user.id == post.user_id%>
    <%= link_to 'Delete', post_path(post), method: :delete, data:{ confirm: "Are you sure?"}, class:"btn btn-danger"%>
  <% end %>
  <br>
   <%= link_to "Comments #{post.comments.size}", post_path(post)%>

<% end %>

<% post = Post.find(3) %>
  <p><%= User.find(post.user_id).username %></p>
  <p><%= post.message %></p>
    <%=
      link_to 'Like',
      url_for({controller: "posts", action: "update", id: "#{post.id}"}),
      method: :patch, remote: true,
      class: "like_button" %>
    <%= javascript_tag '$(".like_button").click();' %>
  <span id=<%="likes_#{post.id}"%>>
    <% if post.likes > 0 %>
      Likes: <%= post.likes %>
    <% end %>
  </span>
  <br>
  <%= link_to 'Comments', post_path(post)%> <br>
<% end %>





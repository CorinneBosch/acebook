<div class='header-title'>
  <h1>New Post</h1>
</div>
<section class='login-box'>
  <%= form_for @new_post do |form| %>
    <div class="field">
      <%= form.text_area :message, placeholder: 'Your post... ðŸ”¥', :id => "mytextarea" %>
    </div>
    <div>
      <%= form.label :post_image %>
      <%= form.file_field :post_image, :id => "file-button" %>
    </div>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.submit "Submit" %>
  <% end %>
</section>
<% @new_post.errors.full_messages.each do |msg| %>
  <li> <%= msg %></li>
<% end %>

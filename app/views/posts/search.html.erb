<div class='flow-search'>
  <h1>Posts matching the seach of "<%= emojify(@display_search) %>"</h1>
</div>
<%# "There are no mathing posts for " %>
<section class='feed-box'>
  <%# <div class='new-post-box'> %>
  <span>
    <p align="center"><%= ("There are no mathing posts for " + emojify(@display_search)) if @list_posts.count == 0 %></p>
  </span>

  <% @list_posts.each do |post| %>
    <section class='feed-post-box'>
    
      <div>
        <h3>
          <%= image_tag(user_avatar(post.user_id), :class => 'profile-img' ) %>
          <%= User.find(post.user_id).username %>
        </h3>
          <h6 id='time'>Posted <%= time_ago_in_words(post.created_at) %></h6>
      </div>
      <hr id='post-hr'>
      <%= emojify(post.message) %>
      <%= image_tag((post.post_image), :class => 'post-img' ) if post.post_image.attached? %>
        <div class='comment-box'>
          <div id='post-likes'>
        
            <%=
              link_to image_tag('JF-Queen-Heart.png', :class => 'post-heart'),
              url_for({controller: "posts", action: "update", like: true, id: post.id}),
              method: :patch,
              remote: true,
              class: "like_or_dislike_button" %>
            <%=
              link_to image_tag('JF-Joker-Spades.png', height: 70, :class => 'post-heart-broken'),
              url_for({controller: "posts", action: "update", dislike: true, id: post.id}),
              method: :patch,
              remote: true,
              class: "like_or_dislike_button" %>
            <%= javascript_tag '$(".like_or_dislike_button").click();' %>           
            
            
            <span id=<%="likes_#{post.id}" %> class='post-‚ô•Ô∏è'>
              <% if post.likes >= 0 %>
                <p id='post-‚ô•Ô∏è'>‚ô•Ô∏è<%= post.likes %></p>
              <% else %>
                <p id='post-‚ô•Ô∏è'>üíî<%= post.likes %></p>
              <% end %>
            </span>
            <%= image_tag('JF-King-Heart.jpeg', :onclick => "myFunction()", :class => 'post-K')%>
            <%# <button onclick="myFunction()" class='close-button'>üí¨<%= post.comments.count %>
            <p id='comment-count'>üí¨ <%= post.comments.count %> Komments</p>
            <p id='heart-the-post'>Heart post</p>
          </div>
        </div>

        <%# <div id=<%="hidden_#{post.id}" %> 
        <div id='hiddendiv--'>
          <strong>Recent Komments</strong><br>
          <% ('if comments are empty ask didplay no comments yer') %>
          <% post.comments.each do |comment| %>
         
          <%= image_tag(user_avatar(comment.user_id), :class => 'profile-img-comment') %>
          <div id='comment-message'>
            <%= emojify(comment.message) %>
            <%= link_to image_tag('JF-Queen-Heart.png', :class => 'comment-heart'), [comment.post, comment], method: 'patch' %>
          </div>
          <div id='comment-‚ô•Ô∏è'>
            <p id='time-com'>Posted <%= time_ago_in_words(comment.created_at) %></p>
            <% if comment.likes > 0 %>
            <p class='+'>‚ô•Ô∏è <%= comment.likes %></p>
            <% elsif comment.likes == 0 %>
            <p class='0'>‚ô•Ô∏è <%= comment.likes %></p>
            <% elsif comment.likes < 0 %>
            <p class='-'>‚ô•Ô∏è <%= comment.likes %></p>
            <% end %>
          </div>
          <% end %>          
        </div>
    </section>
  <% end %>
</section>

  <p><%= @post.message %></p>
  <p>
  <strong>Comments:</strong>
  <br>
  <% @post.comments.each do |comment| %>
  <div class='profile-image'>
  <%= image_tag(user_avatar(comment.user_id), :class => 'profile-img') %>
  <%= User.find(comment.user_id).username %>
  </div>
  <%= comment.message %>
  <%= link_to 'Like', [comment.post, comment], method: 'patch' %>
  <br>
  <% if comment.likes > 0 %>
  Likes: <%= comment.likes %>
  <br>
  <% end %>
  <br>
  <% end %>
  </p>

<div>
<%= form_for([@post, @post.comments.build]) do |form| %>
  <%= form.label 'Add comment:' %>
  <%= form.text_field :message %>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <%= form.submit "Submit" %>
<% end %>
</div>

<h1>Login</h1>

<% if !!flash[:alert] %>
  <% flash.each do |k, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
<% end %>

<%= form_tag login_path do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
    <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag 'Login' %>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-info mt-4" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:emptymessage]  %>
  <div class="alert alert-warning" role="alert">
    <%= flash[:emptymessage] %>
  </div>
<% end %>

<% if flash[:emptycomment]  %>
  <div class="alert alert-warning" role="alert">
    <%= flash[:emptycomment] %>
  </div>
<% end %>

<% if flash[:loggedout]  %>
  <div class="alert alert-success" role="alert">
    <%= flash[:loggedout] %>
  </div>
<% end %>

<% if flash[:invalid] %>
  <div class="alert alert-info mt-4" role="alert">
    <%= flash[:invalid]  %>
  </div>
<% end %>
<nav class='bar-box'>
  <div class="some-collapse-navbar">
    <li class='logo-li'>
      <%= image_tag('JF-Ace-Spades.png', :class => 'logo') %>
    </li>
    <% if logged_in? %>
      <li class="li-box">
        <%= link_to "Feed", posts_path %>
      </li>
      <li class="li-box">
        <%= link_to "New Post", new_post_path %>
      </li>
      <li class="li-box">
        <%= link_to "Logout", logout_path, method: :delete %>
      </li>
      <form class="d-flex" action="/search">
        <input class="form-control me-2" name="q" type="search" placeholder="Search" aria-label="Search" required=true>
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
      <%= link_to image_tag(user_avatar(current_user.id), :class => 'profile-img-nav'), username_path(current_user[:username]) %> 
    
    <% else %>
      <li class="li-box">
        <%= link_to "Login", login_path %>
      </li>
      <li class="li-box">
        <%= link_to "Sign up", signup_path %>
      </li>
    <% end %>
  </div>
</nav>
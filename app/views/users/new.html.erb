<h1>Helllloooo create new user</h1>

<% if !!flash[:alert] %>
  <% flash.each do |k, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
<% end %>

  <%= form_for @user, url: signup_path do |form| %>
    <h2>Enter User Details</h2>
    <% @user.errors.full_messages.each do |msg| %>
       <li> <%= msg %></li>
    <% end %>
  
    <div>
      <%= form.text_field :username, placeholder: 'Username' %>
    </div>
    <div>
      <%= form.text_field :first_name, placeholder: 'First name' %>
    </div>
    <div>
      <%= form.text_field :last_name, placeholder: 'Surname' %>
    </div>
    <div>
      <%= form.password_field :password, placeholder: 'Password' %>
    </div>
    <div>
      <%= form.password_field :password_confirmation, placeholder: 'Confirm Password' %>
    </div>
    <div>
      <%= form.text_field :email, placeholder: 'suckerberg@acebook.com' %>
    </div>
    <div>
      <%= form.text_field :email_confirmation, placeholder: 'suckerberg@acebook.com' %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %><br>

  <div>
    Already have an account? <%= link_to "Login", login_path%>
  </div>




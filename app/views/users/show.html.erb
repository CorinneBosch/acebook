<section class='feed-post-box'>
  <div class='field-panorama'>
    <%= image_tag(user_avatar(current_user.id), :class => 'profile-square')%>
  </div>
  <section class='profile-details'>
    <%# <%= image_tag(user_avatar(current_user.id), :class => 'profile-square')%>
